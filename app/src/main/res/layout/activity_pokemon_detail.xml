<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PokemonDetail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon_title"
        android:textAlignment="viewStart"
        android:layout_marginStart="145dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:fontFamily="@font/pokemongb"
        android:text="PokemonName"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:id="@+id/pokemon_type"
        android:textSize="17sp"
        android:text="Type"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_marginStart="150dp"
        android:id="@+id/pokemon_hw"
        android:textSize="17sp"
        android:text="HW"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/pokemon_HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="260dp"
            android:text="Pokemon HP"
            android:textColor="@color/HP"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_Attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="220dp"
            android:text="Pokemon att"
            android:textColor="@color/Attack"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_Defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="180dp"
            android:text="Pokemon def"
            android:textColor="@color/Defense"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_SpAtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="140dp"
            android:text="Pokemon spatt"
            android:textColor="@color/SpAttack"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_SpDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:text="Pokemon spdef"
            android:textColor="@color/SpDefense"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/pokemon_Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="60dp"
            android:text="Pokemon Spd"
            android:textColor="@color/Speed"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>


    </RelativeLayout>

</LinearLayout>