<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PokemonDetail">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon_photo"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon_title"
        android:textAlignment="viewStart"
        android:layout_marginStart="165dp"
        android:layout_marginTop="0dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:fontFamily="@font/pokemongb"
        android:text="PokemonName"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"/>

    <TextView
        android:id="@+id/pokemon_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"

        android:text="Type"
        android:textAlignment="viewStart"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_marginStart="170dp"
        android:id="@+id/pokemon_hw"
        android:textSize="17sp"
        android:text="HW"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/pokemon_HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="260dp"
            android:text="Pokemon HP"
            android:textColor="@color/HP"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_Attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="220dp"
            android:text="Pokemon att"
            android:textColor="@color/Attack"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_Defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="180dp"
            android:text="Pokemon def"
            android:textColor="@color/Defense"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_SpAtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="140dp"
            android:text="Pokemon spatt"
            android:textColor="@color/SpAttack"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pokemon_SpDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:text="Pokemon spdef"
            android:textColor="@color/SpDefense"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/pokemon_Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pokemongb"
            android:layout_alignStart="@+id/pokemon_HP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="60dp"
            android:text="Pokemon Spd"
            android:textColor="@color/Speed"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>