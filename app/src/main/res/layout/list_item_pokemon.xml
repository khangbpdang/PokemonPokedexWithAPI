<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/pokemon_list_item_pokemonImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/pokemon_list_item_pokemonImage"
        android:background="@color/yellow"
        />

    <TextView
        android:id="@+id/pokemon_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/pokemongb"
        android:layout_toEndOf="@id/pokemon_list_item_pokemonImage"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/textViewColor"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:text="Pokemon Name"/>

</RelativeLayout>